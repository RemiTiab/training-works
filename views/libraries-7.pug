include ../partials/components/header.pug
<div class="page page--glide-js">
  //- Carousel - glide.js
  <div class="glide">
    <h1 class="carousel__title">Carousel with Glide.js</h1>
    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides">
        <li class="glide__slide">
          <img class="glide__slide__img" src="/libraries/img/glide/html5.png" alt="HTML5 Logo" />
          <h1 class="glide__slide__title">HTML5</h1>
        </li>
        <li class="glide__slide">
          <img class="glide__slide__img" src="/libraries/img/glide/css3.png" alt="CSS3 Logo" />
          <h1 class="glide__slide__title">CSS3</h1>
        </li>
        <li class="glide__slide">
          <img class="glide__slide__img" src="/libraries/img/glide/javascript.jpg" alt="Javascript Logo" />
          <h1 class="glide__slide__title">Javascript</h1>
        </li>
      </ul>
      <div class="glide__bullets" data-glide-el="controls[nav]">
        <button class="glide__bullet" data-glide-dir="=0"></button>
        <button class="glide__bullet" data-glide-dir="=1"></button>
        <button class="glide__bullet" data-glide-dir="=2"></button>
      </div>
    </div>
  </div>
</div>
include ../partials/components/footer.pug